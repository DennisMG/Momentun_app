<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="#ff000101" android:weightSum="1">

    <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_above="@+id/Linear_Layout_Id" android:layout_centerHorizontal="true"
            android:layout_below="@+id/space">
    </FrameLayout>
    <LinearLayout
            android:id="@+id/Linear_Layout_Id"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" android:gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/imageGalleryButton" android:src="@drawable/photo" android:background="#ffca28"
                android:contentDescription="@string/image_2_gallery" android:scaleType="center"/>
        <ImageView
                android:layout_width="104dp"
                android:layout_height="110dp"
                android:id="@+id/imageCameraButton" android:src="@drawable/camera" android:background="#8bc34a"
                android:contentDescription="@string/image_1_camera" android:scaleType="fitCenter"/>
        <ImageView
                android:layout_width="119dp"
                android:layout_height="110dp"
                android:id="@+id/imageRecordButton" android:src="@drawable/record" android:background="#ff5722"
                android:baselineAlignBottom="true" android:contentDescription="@string/image_3_video"
                android:scaleType="center"/>
    </LinearLayout>
    <Space
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true" android:id="@+id/space"/>

</RelativeLayout>
